# ===========================================
# YLEM CONFIGURATION
# ===========================================
# Copy this file to .env and fill in your values
# Generated by Ylem Setup Wizard
#
# NEVER commit .env to git - it contains secrets!
# ===========================================

# ─────────────────────────────────────────────
# NETWORK
# ─────────────────────────────────────────────
# Your PC's local IP address (run 'ipconfig' to find)
HOST_IP=192.168.x.x

# Your domain name (leave empty for local-only access)
DOMAIN=

# ─────────────────────────────────────────────
# PORTS
# ─────────────────────────────────────────────
# Production: 80, 443, 81, 3000, 3001
# Test:       8080, 8443, 8181, 3100, 3101

NPM_HTTP_PORT=80
NPM_HTTPS_PORT=443
NPM_ADMIN_PORT=81
GAME_SERVER_PORT=3000
EPG_SERVER_PORT=3001

# ErsatzTV port (usually don't change)
ERSATZTV_PORT=8409

# ─────────────────────────────────────────────
# DYNAMIC DNS (Optional)
# ─────────────────────────────────────────────
DUCKDNS_ENABLED=false
DUCKDNS_SUBDOMAIN=
DUCKDNS_TOKEN=

# ─────────────────────────────────────────────
# CHANNELS
# ─────────────────────────────────────────────
WEB_CHANNELS=1000:Channel One,1001:Channel Two
PI_CHANNELS=2000:CRT Channel 1,2001:CRT Channel 2

# ─────────────────────────────────────────────
# RASPBERRY PI
# ─────────────────────────────────────────────
PI_HOSTNAME=YlemPi
PI_USER=ylem
PI_DEFAULT_CHANNEL=2000

# ─────────────────────────────────────────────
# BACKUPS
# ─────────────────────────────────────────────
BACKUP_ENABLED=true
BACKUP_PATH=./backups
BACKUP_TIME=03:00
BACKUP_RETENTION_DAYS=30

# ─────────────────────────────────────────────
# VERSION PINNING (for reproducible deployments)
# ─────────────────────────────────────────────
NPM_IMAGE_VERSION=latest
NODE_IMAGE_VERSION=20-alpine
